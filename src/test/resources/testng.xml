<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="smoke-suite" verbose="1">
    <test name="smoke">
        <groups>
            <run><include name="smoke"/></run>
        </groups>
        <packages>
            <package name="com.example.tests"/>
        </packages>
    </test>
    <test name="bdd">
        <classes>
            <class name="com.example.runner.CucumberTestRunner"/>
        </classes>
    </test>
</suite>

